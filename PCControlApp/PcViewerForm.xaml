<Window x:Class="PCControlApp.PcViewerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCControlApp"
        mc:Ignorable="d"
        Title="Ovládání PC v učebně" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="236*"/>
            <ColumnDefinition Width="543*"/>
        </Grid.ColumnDefinitions>
        <Grid Name="ButtonGrid" Margin="10,40,64,34" Grid.Column="2"/>
        <Button x:Name="startAll" Content="Zapnout vše" HorizontalAlignment="Left" Margin="27,40,0,0" VerticalAlignment="Top" Width="138" Height="46" Grid.Column="1"/>
        <Button x:Name="stopAll" Content="Vypnout vše" HorizontalAlignment="Left" Margin="27,120,0,0" VerticalAlignment="Top" Width="138" Height="46" Grid.Column="1"/>
        <Button x:Name="teacherComputer" Content="PC učitele" HorizontalAlignment="Left" Margin="27,200,0,0" VerticalAlignment="Top" Width="138" Height="46" Grid.Column="1"/>
    </Grid>

</Window>
